\makeatletter


\newcommand{\isempty}[3]{%
	\@ifmtarg{#1}{#2}{#3}}

\newcounter{revcount}
\newcounter{commentcount}[revcount]

\newcommand{\curreviewer}{Reviewer \arabic{revcount}}

\newcommand{\qa}[3]{
\noindent \itshape{#1}
\normalfont \vspace{0.1cm} \\ 
\noindent      
\isempty{#2}
{\color{red}{#3}}
{\color{red} {#2}}
\color{black}\normalfont}

\newcommand{\reviewer}[2]{\stepcounter{revcount}
	\vspace{0.3cm}\noindent\large\textbf{\curreviewer}\normalsize\vspace{0.2cm} \\ 
	\qa{#1}{#2}{We thank \curreviewer...}}



\newcommand{\comment}[2]{
	\stepcounter{commentcount}
	\vspace{0.3cm}\noindent\textbf{Comment \arabic{revcount}.\arabic{commentcount}} \vspace{0.2cm} \\  
	\qa{#1}{#2}{A decent answer...}}
